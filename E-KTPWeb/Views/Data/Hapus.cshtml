@model DataKTP

<form method="post">
    <div class="container">
        <div class="mb-4">
            <h2>Apakah Anda Yakin Hapus Data KTP Ini?</h2>
            <hr />
        </div>
        <div class="mb-3">
            <input asp-for="Id" hidden />
        </div>
        <div class="mb-3">
            <label asp-for="NIK" class="form-label">NIK ANDA :</label>
            <input asp-for="NIK" class="form-control" disabled style="background-color: azure; border: none;" />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">NAMA ANDA :</label>
            <input asp-for="Name" class="form-control" disabled style="background-color: azure; border: none;" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-danger">Hapus</button>
            <a asp-action="Index" asp-controller="Data" class="btn btn-secondary">Kembali</a>
        </div>
    </div>
</form>
